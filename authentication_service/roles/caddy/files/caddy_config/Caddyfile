{
    local_certs
    servers {
        trusted_proxies static 192.168.2.0/24
        }
}

auth.home.com {
        reverse_proxy https://authelia:9091 {
                transport http {
                        tls_insecure_skip_verify
                }
        }
}

#authelia forward auth snippet

(authelia) {
        forward_auth https://authelia:9091 {
                transport http {
                        tls_insecure_skip_verify
                }
                uri /api/authz/forward-auth
                copy_headers Remote-User Remote-Groups Remote-Name Remote-Email
        }
}

#adguard with authelia frontend

adguard.home.com {
        import authelia
        reverse_proxy 192.168.2.201:3000
}
